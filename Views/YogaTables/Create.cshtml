@model ProjectYogaMed.ViewModels.ViewFile

@{
    ViewData["Title"] = "Create";
}

<h1 class="btn btn-primary">Create</h1>

<div class="row" id="bkg">

    <div class="col-md-6">

        <div class="site-blocks-cover overlay ">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-12 text-center" data-aos="fade">

                        <h2 style="color:white; font-family:'Century Schoolbook';"> Yoga List</h2>

                    </div>
                </div>
            </div>
        </div>


        <div class="p-4 mb-5 bg-white">

            <section>
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="YogaName" class="control-label"></label>
                                <input asp-for="YogaName" class="form-control" />
                                <span asp-validation-for="YogaName" class="text-danger"></span>
                            </div>
                            <div class="custom-file">
                                <input asp-for="formFile" class="form-control custom-file-input" />
                                <label class="custom-file-label">choose file...</label>
                                <span asp-validation-for="formFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="YdfkId" class="control-label"></label>
                                <select asp-for="YdfkId" class="form-control" asp-items="ViewBag.YdfkId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </section>
            <br>
            <p>
                &nbsp;&nbsp;<img src="~/images/step1.png" width="153" height="200" />
                <img src="~/images/step2.png" width="153" height="200" />
                <img src="~/images/step3.png" width="153" height="200" />
            </p>
        </div>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <br><br>
        <img src="~/images/gita.jpg" class="card-img-top" alt=".fsfsfsfdf" style="height:43.1rem">
    </div>

</div>
@section scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(filename);
            });
        });
    </script>

}


