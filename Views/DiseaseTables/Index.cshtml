@model IEnumerable<ProjectYogaMed.Models.DiseaseTable>

@{
    ViewData["Title"] = "Disease List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create"class="btn btn-primary">Create New</a>
</p>
<div class="container">
    <table class="table table-bordered text-light bg-dark">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DiseaseName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiseaseName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.DiseaseId">Edit</a> |
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.DiseaseId">Details</a> |
                        <a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.DiseaseId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <partial name="DView" />
    </div>
    </div>